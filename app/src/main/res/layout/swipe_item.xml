<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollView2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    app:layout_constraintBottom_toTopOf="@+id/linearLayout"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@drawable/profile_card"
        >

        <!-- Bookmark Icon -->
        <ImageView
            android:id="@+id/bookmarkIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_bookmark"
            android:layout_gravity="end"
            app:tint="#ff7a26" />

        <!-- Cat Image Section -->
        <ImageView
            android:id="@+id/catPic"
            android:layout_width="347dp"
            android:layout_height="312dp"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:background="@drawable/rounded_image_border"
            android:clipToOutline="true"
            android:scaleType="centerCrop"
            android:src="@drawable/cat0" />

        <!-- Cat Name and Age Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:gravity="center">

            <TextView
                android:id="@+id/nameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fluffy"
                android:fontFamily="@font/poppins_bold"
                android:textSize="20sp"
                android:textColor="@color/black" />
        </LinearLayout>

        <!-- Basic Information Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:padding="20dp"
            android:background="@drawable/card_background"
            android:layout_gravity="center">

            <!-- Header with Icon for Basic Information -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="start"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_info"
                    android:layout_marginEnd="10dp"
                    android:tint="#ff7a26" />

                <TextView
                    android:id="@+id/generalInformation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Basic Information"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- Age -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="start"
                android:layout_marginTop="8dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_age"
                    android:tint="#000"
                    android:layout_marginEnd="10dp" />

                <TextView
                    android:id="@+id/ageText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Age: 3 years old"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="14sp"
                    android:textColor="@color/black" />
            </LinearLayout>


            <!-- Breed -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="start"
                android:layout_marginTop="8dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_breed"
                    android:tint="#000"
                    android:layout_marginEnd="10dp" />

                <TextView
                    android:id="@+id/breedText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Breed: Garfield"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="14sp"
                    android:textColor="@color/black" />
            </LinearLayout>


            <!--  Weight -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="start"
                android:layout_marginTop="8dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_weight"
                    android:tint="#000"
                    android:layout_marginEnd="10dp" />

                <TextView
                    android:id="@+id/weightText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Weight: 5 kg"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="14sp"
                    android:textColor="@color/black" />
            </LinearLayout>

            <!-- Gender -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="start"
                android:layout_marginTop="8dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_gender"
                    android:tint="#000"
                    android:layout_marginEnd="10dp" />

                <TextView
                    android:id="@+id/sexText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gender: Female"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="14sp"
                    android:textColor="@color/black" />
            </LinearLayout>
            s
            <!-- Neutered/Spayed -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="start"
                android:layout_marginTop="8dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_shield"
                    android:tint="#000"
                    android:layout_marginEnd="10dp" />

                <TextView
                    android:id="@+id/neuterText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Neutered/Spayed: Yes"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="14sp"
                    android:textColor="@color/black" />
            </LinearLayout>
        </LinearLayout>



        <!-- Temperament Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:padding="20dp"
            android:background="@drawable/card_background"
            android:layout_gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="start"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_heart"
                    android:layout_marginEnd="10dp"
                    android:tint="#ff7a26" />

                <TextView
                    android:id="@+id/tempermentLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Temperament"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="16sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tempermentText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Friendly, Playful"
                android:fontFamily="@font/poppins_regular"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!-- Bio Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:padding="20dp"
            android:background="@drawable/card_background"
            android:layout_gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="start"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_bio"
                    android:layout_marginEnd="10dp"
                    android:tint="#ff7a26" />

                <TextView
                    android:id="@+id/bioLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bio"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="16sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/bioText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fluffy is a playful and loving cat looking for a forever home."
                android:fontFamily="@font/poppins_regular"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!-- Compatible With Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:padding="20dp"
            android:background="@drawable/card_background"
            android:layout_gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="start"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_medical"
                    android:layout_marginEnd="10dp"
                    app:tint="#ff7a26" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Compatible With Other Pets?"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="16sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/compatibleWithText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vaccinations: Up to date. No known health issues."
                android:fontFamily="@font/poppins_regular"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!-- Adoption Fee Section with Card Background -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:padding="20dp"
            android:background="@drawable/card_background"
            android:layout_gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="start"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_money"
                    android:layout_marginEnd="10dp"
                    android:tint="#ff7a26" />

                <TextView
                    android:id="@+id/adoptionFeeLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Adoption Fee"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="16sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/adoptionFeeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₱3000"
                android:fontFamily="@font/poppins_regular"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/contactInformationText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact: 09123456789"
                android:fontFamily="@font/poppins_regular"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_marginTop="8dp" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>
