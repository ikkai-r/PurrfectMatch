<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:layout_marginTop="10dp"
    android:fitsSystemWindows="true">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout
                android:id="@+id/relativeLayout"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:id="@+id/linearLayout4"
                    android:layout_width="199dp"
                    android:layout_height="59dp"
                    android:layout_marginStart="147dp"
                    android:layout_marginTop="22dp"
                    android:layout_marginEnd="34dp"
                    android:layout_marginBottom="14dp"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/nameProfile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/fredoka_medium"
                        android:text="Mickey Mouse"
                        android:textAlignment="textStart"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_marginTop="3dp"
                            android:layout_marginEnd="5dp"
                            android:src="@drawable/ic_location" />

                        <TextView
                            android:id="@+id/locationProfile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_light"
                            android:text="Manila, Philippines"
                            android:textSize="12dp" />


                    </LinearLayout>


                    <TextView
                        android:id="@+id/phoneNumberProfile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_light"
                        android:text="+9321234567"
                        android:textSize="10dp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/profilePicture"
                    android:layout_width="142dp"
                    android:layout_height="73dp"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="29dp"
                    android:layout_marginRight="29dp"
                    android:layout_marginBottom="6dp"

                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/linearLayout4"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/user_1" />

                <TextView
                    android:id="@+id/editProfileBtn"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="18dp"
                    android:background="@drawable/rounded_linear_layout_view"
                    android:backgroundTint="#F1EAE0"
                    android:fontFamily="@font/poppins_regular"
                    android:minHeight="0dp"
                    android:padding="2dp"
                    android:paddingStart="10dp"
                    android:text="Edit Profile"
                    android:textColor="#4C0000"
                    android:textSize="10dp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/linearLayout5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

                <!-- Applications Button -->
                <TextView
                    android:id="@+id/applications"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/rounded_linear_layout_view"
                    android:backgroundTint="#FBA526"
                    android:fontFamily="@font/poppins_medium"
                    android:padding="3dp"
                    android:layout_marginLeft="10dp"
                    android:text="  View Submitted Applications  "
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="10sp" />

                <!-- Logout Button -->
                <TextView
                    android:id="@+id/logoutBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/bg_button_red"
                    android:fontFamily="@font/poppins_bold"
                    android:padding="3dp"
                    android:layout_marginRight="10dp"
                    android:text="     Logout     "
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="10sp" />
            </RelativeLayout>


            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <!-- Add your bottom layout elements here -->

            <TextView
                android:id="@+id/bioText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/poppins_medium"
                android:text="ABOUT ME"
                android:textColor="#4C0000"
                android:textSize="14dp" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="0.5dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="10dp"
                android:background="#FDA626"
                android:scaleY="5" />

                <TextView
                    android:id="@+id/bioTextProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:background="@drawable/rounded_linear_layout_view"
                    android:fontFamily="@font/poppins_light"
                    android:padding="15dp"
                    android:text="&quot;Hello, I am Mickey Mouse, 20 years old. I am currently a college student living along in a condo. I am looking to adopt a cat that will keep me company in my small space! I have experience taking care of cats in the past. I hope to be a loving catâ€™s PURRever home!"
                    android:textSize="10dp" />


                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="LIFESTYLE / PREFERENCES"
                    android:textColor="#4C0000"
                    android:textSize="14dp" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginBottom="10dp"
                    android:background="#FDA626"
                    android:scaleY="5" />

                <TextView
                    android:id="@+id/lifestyleText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:background="@drawable/rounded_linear_layout_view"
                    android:fontFamily="@font/poppins_light"
                    android:padding="15dp"
                    android:text=" Household Members:
                                    \n Other pets:
                                    \n Cat Preferences:"
                    android:textSize="10dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/bookmarkedCatsLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="25dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/bookmarkedCatsTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="BOOKMARKED CATS"
                    android:textColor="#4C0000"
                    android:textSize="14dp" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:background="#FDA626"
                    android:scaleY="5" />

                <TextView
                    android:id="@+id/noBookmarkedCatsTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="You have no bookmarked cats."
                    android:textColor="#4C0000"
                    android:textSize="9dp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:scrollbars="horizontal"
                    android:orientation="horizontal"/>
            </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#FDA626"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="4dp"
        android:paddingBottom="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/profile"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:src="@drawable/ic_profile_black" />

        <ImageView
            android:id="@+id/swipe"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:src="@drawable/ic_navcat" />

        <ImageView
            android:id="@+id/explore"
            android:layout_width="0dp"
            android:layout_height="39dp"
            android:layout_weight="1"
            android:src="@drawable/ic_list" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>