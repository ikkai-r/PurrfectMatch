<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="13dp"
    android:backgroundTint="#F7F7F7"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

        <ImageView
            android:id="@+id/image"
            android:layout_width="125dp"
            android:layout_height="match_parent"
            android:src="@drawable/cat0"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:id="@+id/text"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:paddingTop="8dp">

            <TextView
                android:id="@+id/titleBig"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Application Reviewed"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/titleSmall"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="Sample Text Here"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/textBig"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sample Text here"
                android:textSize="12sp"
                 />

            <TextView
                android:id="@+id/actionBtn"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Action Here"
                android:textAlignment="center"
                android:textSize="13sp"
                android:textColor="#FFFFFF"
                android:padding="2sp"
                android:textStyle="bold"
                android:background="@drawable/rounded_linear_layout_view"
                android:backgroundTint="#FBA526"
                android:layout_weight="1" />

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
