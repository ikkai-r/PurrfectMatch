<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    tools:context=".CatPicEditForm">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:paddingStart="0dp"
        android:clipChildren="false"

        android:paddingEnd="0dp"
        android:orientation="vertical"
        android:textAlignment="center">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="218dp"
            android:layout_height="12dp"
            android:layout_gravity="center"
            android:src="@drawable/dots_3" />

        <TextView
            android:id="@+id/titleTextPic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/poppins_bold"
            android:text="Edit cat information"
            android:layout_marginTop="18dp"
            android:textAlignment="center"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/poppins_regular"
            android:text="Pictures"
            android:textAlignment="center"
            android:layout_marginTop="-10dp"
            android:textSize="15sp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipChildren="false"
            android:padding="16dp">

            <!-- Large Image -->

            <!-- Smaller Images (right) -->

            <FrameLayout
                android:id="@+id/largeImageView"
                android:layout_width="254dp"
                android:layout_height="247dp"
                android:layout_margin="3dp"
                android:clipChildren="false"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:clipChildren="false"
                    android:id="@+id/imageView5"
                    android:layout_width="wrap_content"
                    android:layout_height="254dp"
                    app:srcCompat="@drawable/dweety" />

                <View
                    android:id="@+id/notificationBadge1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="top|end"
                    android:layout_marginTop="-5dp"
                    android:layout_marginEnd="-2dp"
                    android:background="@drawable/circle_red" />

                <TextView
                    android:id="@+id/badgeText1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|end"
                    android:layout_marginTop="-5dp"
                    android:layout_marginEnd="4dp"
                    android:fontFamily="@font/poppins_light"
                    android:text="X"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />

            </FrameLayout>

            <ImageView
                android:id="@+id/smallImageView4"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/picture_placeholder"
                android:contentDescription="Small Image 1"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toStartOf="@+id/smallImageView5"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/smallImageView3"
                app:layout_constraintTop_toBottomOf="@+id/largeImageView" />

            <ImageView
                android:id="@+id/smallImageView5"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/picture_placeholder"
                android:contentDescription="Small Image 1"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/smallImageView4"
                app:layout_constraintTop_toBottomOf="@+id/largeImageView" />

            <ImageView
                android:id="@+id/smallImageView3"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/picture_placeholder"
                android:contentDescription="Small Image 1"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toStartOf="@+id/smallImageView4"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/largeImageView" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>

</FrameLayout>