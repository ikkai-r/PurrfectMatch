<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    tools:context=".CatPicForm">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:paddingStart="0dp"
        android:paddingEnd="0dp"
        android:orientation="vertical"
        android:textAlignment="center">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="218dp"
            android:layout_height="12dp"
            android:layout_gravity="center"
            android:src="@drawable/dots_3" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/poppins_bold"
            android:text="Add a cat"
            android:layout_marginTop="18dp"
            android:textAlignment="center"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/poppins_regular"
            android:text="Pictures"
            android:textAlignment="center"
            android:layout_marginTop="-10dp"
            android:textSize="15sp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <!-- Large Image -->

            <!-- Smaller Images (right) -->

            <ImageView
                android:id="@+id/largeImageView"
                android:layout_width="218dp"
                android:layout_height="227dp"
                android:layout_margin="8dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/dweety"
                android:contentDescription="Main Image"
                android:scaleType="centerCrop"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.6" />

            <ImageView
                android:id="@+id/smallImageView4"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/picture_placeholder"
                android:contentDescription="Small Image 1"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toStartOf="@+id/smallImageView5"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/smallImageView3"
                app:layout_constraintTop_toBottomOf="@+id/largeImageView" />

            <ImageView
                android:id="@+id/smallImageView5"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/picture_placeholder"
                android:contentDescription="Small Image 1"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/smallImageView4"
                app:layout_constraintTop_toBottomOf="@+id/largeImageView" />

            <ImageView
                android:id="@+id/smallImageView3"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/picture_placeholder"
                android:contentDescription="Small Image 1"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toStartOf="@+id/smallImageView4"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/largeImageView" />

            <ImageView
                android:id="@+id/smallImageView2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="8dp"
                android:background="@drawable/picture_placeholder"
                android:contentDescription="Small Image 2"
                android:scaleType="centerCrop"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toEndOf="parent"
                tools:layout_editor_absoluteY="16dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>

</FrameLayout>