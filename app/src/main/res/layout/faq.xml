<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fitsSystemWindows="true">

    <!-- ScrollView for FAQ Content -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/navBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- FAQ Title -->
            <TextView
                android:id="@+id/faqTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:text="FAQ"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="34sp" />

            <!-- About Us Section -->
            <TextView
                android:id="@+id/about_us_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About Us"
                android:textColor="#AD762E"
                android:fontFamily="@font/poppins_bold"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingBottom="10dp" />

            <TextView
                android:id="@+id/about_us_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Text here"
                android:textSize="13sp"
                android:textColor="#4C4C4C"
                android:paddingBottom="24dp" />

            <!-- App Usage -->
            <TextView
                android:id="@+id/app_usage_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="App Usage"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#AD762E"
                android:paddingTop="16dp"
                android:paddingBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="How does in-app adoption application work?"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/app_usage_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Text here"
                android:textSize="13sp"
                android:textColor="#4C4C4C"
                android:paddingBottom="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="How do I track my submitted applications?"
                android:textSize="16sp"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/app_track"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Text here"
                android:textSize="13sp"
                android:textColor="#4C4C4C"
                android:paddingBottom="12dp" />

            <!-- General Section -->
            <TextView
                android:id="@+id/faq_general_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="General Questions about Adoption in the Philippines"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#AD762E"
                android:paddingTop="16dp"
                android:paddingBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Who can adopt a pet in the Philippines?"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Adopters must meet the basic guidelines for pet adoption in the Philippines, ensuring they can provide a loving and safe environment for the pet."
                android:textSize="14sp"
                android:textColor="#4C4C4C"
                android:paddingBottom="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="What are the requirements to adopt a pet?"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Requirements may vary, but they generally include: a valid government-issued ID, proof of financial stability to ensure the petâ€™s needs can be met, and a suitable and safe home environment. Additionally, after the application is screened and a meeting is scheduled, adopters are required to bring a valid ID (matching the details in the application), any additional documents requested (e.g., proof of pet ownership history), and supplies like a pet carrier or leash to the meeting."
                android:textSize="14sp"
                android:textColor="#4C4C4C"
                android:paddingBottom="12dp" />

        </LinearLayout>
    </ScrollView>

    <!-- Navigation Bar -->
    <LinearLayout
        android:id="@+id/navBar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#FDA626"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="4dp"
        android:paddingBottom="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/profile"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:src="@drawable/ic_profile_black" />

        <ImageView
            android:id="@+id/swipe"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:src="@drawable/ic_navcat" />

        <ImageView
            android:id="@+id/explore"
            android:layout_width="0dp"
            android:layout_height="39dp"
            android:layout_weight="1"
            android:src="@drawable/ic_list" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
