<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".ScheduleShelter">

    <LinearLayout
        android:id="@+id/dateTimePickerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="600dp"
            android:layout_height="150dp"
            android:src="@drawable/single_cat" />

        <TextView
            android:id="@+id/textView34"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_bg2"
            android:fontFamily="@font/poppins_bold"
            android:padding="10dp"
            android:text="It's a match!"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/subheading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginHorizontal="20dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Book appointment"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/datePicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/edittext_bg"
            android:fontFamily="@font/poppins_regular"
            android:hint="Pick a date range"
            android:padding="12dp"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/startTimePicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/edittext_bg"
            android:fontFamily="@font/poppins_regular"
            android:hint="Pick a start time"
            android:padding="12dp"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/endTimePicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/edittext_bg"
            android:fontFamily="@font/poppins_regular"
            android:hint="Pick an end time"
            android:padding="12dp"
            android:textColor="#000000"
            android:textSize="16sp" />


        <EditText
            android:id="@+id/venuePicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/edittext_bg"
            android:fontFamily="@font/poppins_regular"
            android:hint="Suggest Venue"
            android:padding="12dp"
            android:textColor="#000000"
            android:textSize="16sp" />


    </LinearLayout>

    <Button
        android:id="@+id/button2"
        android:layout_width="380dp"
        android:layout_height="68dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="44dp"
        android:backgroundTint="#000000"
        android:fontFamily="@font/poppins_bold"
        android:onClick="schedSuccess"
        android:text="Schedule"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dateTimePickerLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>
