<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:backgroundTint="#F4F2F2"
    app:cardCornerRadius="12dp"
    app:cardElevation="1dp">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

        <ImageView
            android:id="@+id/catImage"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/cat0"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp">

            <TextView
                android:id="@+id/catName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dweety"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/catSex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â™€"
                android:gravity="end"
                android:textColor="#EB5FB5"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_weight="1" />
        </LinearLayout>

        <TextView
            android:id="@+id/catAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="47 months old"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="3dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/catNeutered"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:text="Spayed"
                android:background="@drawable/rounded_linear_layout_view"
                android:textAlignment="center"
                android:textSize="9sp" />

            <TextView
                android:id="@+id/catBreed"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:background="@drawable/rounded_linear_layout_view"
                android:backgroundTint="#FDA626"
                android:text="Puspin"
                android:textAlignment="center"
                android:textSize="9sp" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
