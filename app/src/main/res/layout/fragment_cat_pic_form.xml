<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    tools:context=".CatPicForm">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:paddingStart="0dp"
        android:paddingEnd="0dp"
        android:orientation="vertical"
        android:textAlignment="center">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="218dp"
            android:layout_height="12dp"
            android:layout_gravity="center"
            android:src="@drawable/dots_3" />

        <TextView
            android:id="@+id/titleTextPic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/poppins_bold"
            android:text="Add a cat"
            android:layout_marginTop="18dp"
            android:textAlignment="center"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/poppins_regular"
            android:text="Pictures"
            android:textAlignment="center"
            android:layout_marginTop="-10dp"
            android:textSize="15sp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">>

            <ImageView
                android:id="@+id/largeImageView"
                android:layout_width="218dp"
                android:layout_height="227dp"
                android:layout_margin="8dp"
                android:background="@drawable/picture_placeholder"
                android:contentDescription="Main Image"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.496"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.096"
                app:layout_constraintWidth_percent="0.6" />

            <TextView
                android:id="@+id/textView44"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:text="Upload image of cat"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/largeImageView" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonNext3"
                android:layout_width="match_parent"
                android:layout_height="61dp"
                android:layout_gravity="center"
                android:layout_marginTop="63dp"
                android:background="@drawable/background_button"
                android:drawableEnd="@drawable/arrow_front"
                android:fontFamily="@font/poppins_bold"
                android:paddingStart="40dp"
                android:paddingEnd="20dp"
                android:text="Next"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="bold"
                app:iconTint="#0D0B0B"
                app:layout_constraintTop_toBottomOf="@+id/textView44"
                tools:layout_editor_absoluteX="-3dp" />

            <TextView
                android:id="@+id/textView43"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:onClick="cancel"
                android:text="Cancel"
                android:textAlignment="center"
                android:textColor="#737272"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="465dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Large Image -->

            <!-- Smaller Images (right) -->


    </LinearLayout>

</FrameLayout>