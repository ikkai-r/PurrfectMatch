<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/white_bg"
    android:fontFamily="@font/poppins_regular"
    android:gravity="center">

    <!-- Filter Title -->
    <TextView
        android:id="@+id/filterTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Filter Cats"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/poppins_regular"
        />

    <!-- Filter by Age -->
    <TextView
        android:id="@+id/filterAgeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Max Age"
        android:textColor="#000000"
        android:fontFamily="@font/poppins_regular"
        android:layout_marginBottom="5dp"/>

    <EditText
        android:id="@+id/filterAgeEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter max age"
        android:inputType="number"
        android:textColor="#000000"
        android:fontFamily="@font/poppins_regular"
        android:padding="10dp"/>

    <!-- Filter by Adoption Fee -->
    <TextView
        android:id="@+id/filterAdoptionFeeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Max Adoption Fee"
        android:textColor="#000000"
        android:fontFamily="@font/poppins_regular"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"/>

    <EditText
        android:id="@+id/filterAdoptionFeeEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter max fee"
        android:inputType="number"
        android:textColor="#000000"
        android:fontFamily="@font/poppins_regular"
        android:padding="10dp"/>

    <!-- Filter by Sex -->
    <TextView
        android:id="@+id/filterSexTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Sex"
        android:textColor="#000000"
        android:fontFamily="@font/poppins_regular"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"/>

    <RadioGroup
        android:id="@+id/filterSexRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/filterSexMale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Male"
            android:textColor="#000000"
            android:fontFamily="@font/poppins_regular"
            android:padding="10dp"/>

        <RadioButton
            android:id="@+id/filterSexFemale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Female"
            android:textColor="#000000"
            android:fontFamily="@font/poppins_regular"
            android:padding="10dp"/>
    </RadioGroup>

    <!-- Apply Button -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/filterApplyButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Apply Filters"
        android:textColor="#ffffff"
        android:background="#000"
        android:fontFamily="@font/poppins_regular"
        android:layout_marginTop="10dp"/>
</LinearLayout>
