<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Top section - Orange (50% of the height) -->
    <item android:left="0dp" android:right="0dp" android:top="0dp" android:bottom="20dp">
        <shape>
            <solid android:color="#FFA500" /> <!-- Orange color -->
        </shape>
    </item>

    <!-- Bottom section - White (remaining height) -->
    <item android:left="0dp" android:right="0dp" android:top="400dp" android:bottom="0dp">
        <shape>
            <solid android:color="#FFFFFF" /> <!-- White color -->
        </shape>
    </item>
</layer-list>