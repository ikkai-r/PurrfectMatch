<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"> <!-- Ensure this tag is inside the root layout only -->

    <!-- ViewPager2 for swipe functionality -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/linearLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Footer section with icons -->
    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#000000"
        android:orientation="horizontal"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center_vertical"
        android:weightSum="3">

    <!-- Profile Image with text beneath -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">
        <ImageView
            android:id="@+id/profile"
            android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/profile"
        android:layout_gravity="center"/>
        <TextView
            android:id="@+id/profile_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:layout_gravity="center"/>
    </LinearLayout>

    <!-- Cat Logo with text beneath -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">
        <ImageView
            android:id="@+id/imageView17"
            android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/catlogo"
        android:layout_gravity="center"/>
        <TextView
            android:id="@+id/matchText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Match"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:layout_gravity="center"/>
    </LinearLayout>

    <!-- Menu Icon with text beneath -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">
        <ImageView
            android:id="@+id/imageView19"
            android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/menu"
        android:layout_gravity="center"/>
        <TextView
            android:id="@+id/menu_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Menu"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:layout_gravity="center"/>
    </LinearLayout>

    </LinearLayout>

    <!-- Upper section with arrows and swipe text -->
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:background="@drawable/outline_background"
        app:layout_constraintBottom_toTopOf="@id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Left Custom Arrow Icon -->
        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            app:srcCompat="@drawable/arrow_left" />

        <!-- Swipe Me Text -->
        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/poppins_regular"
            android:paddingTop="20dp"
            android:text="Swipe Me!"
            android:textAlignment="center"
            android:textColor="#d2d2d2"
            android:textSize="20sp" />

        <!-- Right Custom Arrow Icon -->
        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            app:srcCompat="@drawable/arrow_right" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
