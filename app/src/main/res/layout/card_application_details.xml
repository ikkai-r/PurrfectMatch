<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:backgroundTint="#F4F2F2"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageView
            android:id="@+id/image"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:src="@drawable/cat0"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/titleBig"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Application Reviewed"
                android:textSize="15sp"
                android:textColor = "#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/titleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Sample Text Here"
                android:textSize="10sp"
                android:textColor = "#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textBig"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Sample Text Here"
                android:textColor = "#000000"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/actionBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_linear_layout_view"
                android:backgroundTint="#FBA526"
                android:padding="2dp"
                android:text="Schedule Meeting"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="10sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
